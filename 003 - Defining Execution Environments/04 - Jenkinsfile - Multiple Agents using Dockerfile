pipeline {
	agent none
	stages {
		stage('maven stage') {
			agent { 
				dockerfile {
					filename '04 - Jenkinsfile - Maven Dockerfile'
					dir '003 - Defining Execution Environments/'
				}
			} 
			steps {
				sh 'mvn --version'
			}
		}
		stage('node stage') {
			agent {
				dockerfile {
					filename '04 - Jenkinsfile - Node Dockerfile'
					dir '003 - Defining Execution Environments/'
				}
			} 
			steps {
				sh 'npm --version'
			}
		}
	}
}
