pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build') {
            steps {
	    	def count = 0
		while(count < 2) {
			sh 'date > system_date.txt'
			sh 'cat system_date.txt'
			count++;
			sleep 10
		}	
            }
        }
    }
}
